{
  "name": "simple-shop-server",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only --ignore-watch node_modules --exit-child src/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/server.js",
    "test": "jest --passWithNoTests",
    "test:unit": "set TEST_MODE=unit&& jest --testPathIgnorePatterns=integration --testPathIgnorePatterns=performance --passWithNoTests",
    "test:integration": "set TEST_MODE=integration&& jest --testPathIgnorePatterns=performance --passWithNoTests",
    "test:quick": "jest --testPathIgnorePatterns=performance --passWithNoTests",
    "test:perf": "jest --testNamePattern=Performance --passWithNoTests",
    "test:watch": "jest --watchAll",
    "seed": "ts-node src/seed/products.seed.ts",
    "export-api": "ts-node scripts/export-openapi.ts",
    "validate-swagger": "ts-node scripts/validate-swagger.ts",
    "make-admin": "ts-node scripts/make-admin.ts"
  },
  "dependencies": {
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "bcryptjs": "^3.0.3",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.6.0",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.12",
    "pino": "^9.4.0",
    "pino-pretty": "^11.2.2",
    "prom-client": "^15.1.3",
    "stripe": "^20.1.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@apidevtools/swagger-parser": "^12.1.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.12.12",
    "@types/nodemailer": "^6.4.12",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.4.5"
  }
}
