{
  "info": {
    "name": "Simple Shop API - Basic Tests",
    "description": "Basic collection for testing Health and Products endpoints (no auth required)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/health",
          "host": ["{{baseUrl}}"],
          "path": ["api", "health"]
        }
      },
      "event": [
        {
          "listen": "prerequest",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (!pm.collectionVariables.get('baseUrl')) { pm.collectionVariables.set('baseUrl', 'http://localhost:4001'); }"
            ]
          }
        },
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "const json = pm.response.json();",
              "pm.test('Status 200', () => pm.response.to.have.status(200));",
              "pm.test('Has success true', () => pm.expect(json.success).to.eql(true));",
              "pm.test('Has data.status', () => pm.expect(json.data).to.have.property('status'));"
            ]
          }
        }
      ]
    },
    {
      "name": "Products",
      "item": [
        {
          "name": "List products",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/products", "host": ["{{baseUrl}}"], "path": ["api", "products"] }
          },
          "event": [
            { "listen": "test", "script": { "type": "text/javascript", "exec": [
              "const j = pm.response.json();",
              "pm.test('200', () => pm.response.to.have.status(200));",
              "pm.test('data array', () => pm.expect(Array.isArray(j.data)).to.eql(true));",
              "pm.test('has products', () => pm.expect(j.data.length).to.be.greaterThan(0));",
              "if (j.data.length > 0) {",
              "  pm.collectionVariables.set('firstProductId', j.data[0]._id);",
              "  pm.environment.set('productId', j.data[0]._id);",
              "}"
            ] } }
          ]
        },
        {
          "name": "Get single product",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/products/{{firstProductId}}", "host": ["{{baseUrl}}"], "path": ["api", "products", "{{firstProductId}}"] }
          },
          "event": [
            { "listen": "test", "script": { "type": "text/javascript", "exec": [
              "const j = pm.response.json();",
              "pm.test('200', () => pm.response.to.have.status(200));",
              "pm.test('has product data', () => pm.expect(j.data).to.have.property('_id'));",
              "pm.test('has sku', () => pm.expect(j.data).to.have.property('sku'));"
            ] } }
          ]
        },
        {
          "name": "Get non-existent product",
          "request": {
            "method": "GET",
            "url": { "raw": "{{baseUrl}}/api/products/507f1f77bcf86cd799439011", "host": ["{{baseUrl}}"], "path": ["api", "products", "507f1f77bcf86cd799439011"] }
          },
          "event": [
            { "listen": "test", "script": { "type": "text/javascript", "exec": [
              "const j = pm.response.json();",
              "pm.test('404', () => pm.response.to.have.status(404));",
              "pm.test('success false', () => pm.expect(j.success).to.eql(false));"
            ] } }
          ]
        }
      ]
    }
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:4001" }
  ]
}
